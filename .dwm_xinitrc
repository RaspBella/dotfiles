# xprofile
source ~/.xprofile

# xresources
xrdb ~/.Xresources

# Transparency, etc
xcompmgr &

# Set background with feh
~/.fehbg

# Statusbar loop
while true; do
    xsetroot -name "$(date +"%a %F%r") $(cat /sys/class/power_supply/BAT0/capacity)%"
    sleep 1s # Update time every second
done &

while true
do
    # No logging
    dwm >/dev/null 2>&1
done
